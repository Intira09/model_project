# ------------------------- Utils -------------------------
def split_sentences(text):
    for ch in ['\n', '\r', '\t']:
        text = text.replace(ch, ' ')
    sentences = text.replace('?', '‡•§').replace('!', '‡•§').replace('.', '‡•§').split('‡•§')
    return [s.strip() for s in sentences if s.strip()]

def tokenize_thai(text):
    return word_tokenize(text, keep_whitespace=False)

def clean_text(text):
    return " ".join(text.split())

# ------------------------- PART 5: ‡∏ï‡∏£‡∏ß‡∏à‡∏Ñ‡∏≥‡∏ö‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô -------------------------
def check_opinion(text):
    tokens = tokenize_thai(text)
    if "‡πÑ‡∏°‡πà‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢" in tokens:
        return "‡πÑ‡∏°‡πà‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢"
    if "‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢" in tokens:
        return "‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢"
    return None

# ------------------------- SBERT -------------------------
# ‡∏´‡∏°‡∏≤‡∏¢‡πÄ‡∏´‡∏ï‡∏∏: ‡∏ä‡∏∑‡πà‡∏≠‡πÇ‡∏°‡πÄ‡∏î‡∏•‡∏ô‡∏µ‡πâ‡∏ñ‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÉ‡∏ô hub ‡∏Ç‡∏≠‡∏á sentence-transformers
# ‡∏à‡∏∞‡∏°‡∏µ warning ‡πÅ‡∏•‡∏∞‡πÉ‡∏ä‡πâ mean pooling ‡πÉ‡∏´‡πâ‡πÇ‡∏î‡∏¢‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (‡∏¢‡∏≠‡∏°‡∏£‡∏±‡∏ö‡πÑ‡∏î‡πâ)
sbert_model = SentenceTransformer('airesearch/wangchanberta-base-att-spm-uncased')

def sbert_similarity(a, b):
    va = sbert_model.encode([a])
    vb = sbert_model.encode([b])
    score = cosine_similarity(va, vb)[0][0]
    print(f"[SBERT] similarity = {score:.4f}")
    return float(score)

# ------------------------- ‡∏ï‡∏£‡∏ß‡∏à‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç -------------------------
def check_main_idea(student_answer, keywords, threshold=0.6):
    found = False
    for kw in keywords:
        score = sbert_similarity(student_answer, kw)
        print(f"[Main Idea] '{kw}' ‚Üí similarity = {score:.4f}")
        if score >= threshold:
            found = True
    return found

# ------------------------- ‡∏ï‡∏£‡∏ß‡∏à‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á (‡∏õ‡∏£‡∏±‡∏ö‡∏õ‡∏£‡∏∏‡∏á) -------------------------
def check_example_copy(student_answer, example_keywords, threshold=0.6):
    # SBERT similarity
    max_score = -1.0
    matched_keyword_sbert = None
    for ex in example_keywords:
        score = sbert_similarity(student_answer, ex)
        print(f"[Example Copy SBERT] '{ex}' ‚Üí similarity = {score:.4f}")
        if score >= threshold and score > max_score:
            max_score = score
            matched_keyword_sbert = ex

    # Keyword matching
    matched_keyword_kw = None
    for kw in example_keywords:
        if kw in student_answer:
            matched_keyword_kw = kw
            print(f"[Example Copy Keyword] ‡∏û‡∏ö‡∏Ñ‡∏≥‡∏ï‡∏£‡∏á‡∏ï‡∏±‡∏ß: {kw}")
            break

    # ‡∏ñ‡πâ‡∏≤‡πÄ‡∏à‡∏≠‡∏à‡∏≤‡∏Å‡∏ß‡∏¥‡∏ò‡∏µ‡πÉ‡∏î‡∏ß‡∏¥‡∏ò‡∏µ‡∏´‡∏ô‡∏∂‡πà‡∏á‡∏Å‡πá‡∏ñ‡∏∑‡∏≠‡∏ß‡πà‡∏≤‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å
    copied_flag = matched_keyword_sbert is not None or matched_keyword_kw is not None
    matched_keyword = matched_keyword_sbert if matched_keyword_sbert else matched_keyword_kw

    return copied_flag, matched_keyword


# ------------------------- iAppQA -------------------------
IAPPQA_ENDPOINT = "https://api.aiforthai.in.th/qaiapp"
IAPPQA_HEADERS = {
    "Apikey": "", # add Apikey
    "Content-Type": "application/json"
}

def get_iappqa_answer_retry(question, context, wait_seconds=3):
    while True:
        try:
            payload = {"question": question, "document": context}
            r = requests.post(IAPPQA_ENDPOINT, json=payload, headers=IAPPQA_HEADERS, timeout=30)
            if r.status_code == 200:
                ans = r.json().get("answer", "")
                bad = (not ans) or (ans == "‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏ï‡∏£‡∏ß‡∏à‡πÑ‡∏î‡πâ") or ans.lower().startswith("error") or ("provided context is empty" in ans.lower())
                if not bad:
                    return ans
            print("‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÑ‡∏î‡πâ‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£ ‡∏£‡∏≠ retry...")
        except Exception as e:
            print(f"Exception - {e}")
        time.sleep(wait_seconds)

# ------------------------- MAIN EVALUATION -------------------------
def evaluate_student_answer(student_answer, reference_article, main_idea_keywords, example_keywords):
    cleaned_answer = clean_text(student_answer)
    opinion_txt = check_opinion(cleaned_answer) or "‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≥‡∏ö‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô"

    iapp_questions = [
        "‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô‡∏Ç‡∏≠‡∏á‡∏™‡∏∑‡πà‡∏≠‡∏™‡∏±‡∏á‡∏Ñ‡∏°‡∏≠‡∏≠‡∏ô‡πÑ‡∏•‡∏ô‡πå‡∏°‡∏µ‡∏Ñ‡∏ß‡∏≤‡∏°‡∏à‡∏≥‡πÄ‡∏õ‡πá‡∏ô‡πÉ‡∏ô‡∏ä‡∏µ‡∏ß‡∏¥‡∏ï‡πÑ‡∏´‡∏° ‡∏ï‡∏≠‡∏ö ‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ",
        f"‡∏°‡∏µ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡∏Ñ‡∏≥‡∏ß‡πà‡∏≤ {opinion_txt} ‡∏ï‡∏≠‡∏ö ‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ",
        "‡∏°‡∏µ‡∏ö‡∏≤‡∏á‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô  ‡∏ï‡∏≠‡∏ö ‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ",
        "‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á",
        "‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô ‡∏ï‡∏≠‡∏ö ‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á",
        "‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô ‡∏ï‡∏≠‡∏ö ‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á"
    ]

    results = {
        "iappqa": {},
        "copied_article": 0.0,
        "has_main_idea": False,
        "copied_example": False,
        "copied_example_keyword": None,
        "has_opinion": False
    }

    print("üîç ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö iAppQA:")
    for q in iapp_questions:
        ans = get_iappqa_answer_retry(q, cleaned_answer)
        results["iappqa"][q] = ans
        print(f" - {q}: {ans}")

    print("\nüìå ‡∏ï‡∏£‡∏ß‡∏à‡∏Å‡∏≤‡∏£‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ö‡∏ó‡∏Ñ‡∏ß‡∏≤‡∏°:")
    results["copied_article"] = sbert_similarity(cleaned_answer, reference_article)
    print(" - ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ö‡∏ó‡∏Ñ‡∏ß‡∏≤‡∏°:", results["copied_article"])

    print("\nüìå ‡∏ï‡∏£‡∏ß‡∏à‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç:")
    results["has_main_idea"] = check_main_idea(cleaned_answer, main_idea_keywords)
    print(" - ‡∏Ñ‡∏£‡∏≠‡∏ö‡∏Ñ‡∏•‡∏∏‡∏°‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç:", results["has_main_idea"])

    print("\nüìå ‡∏ï‡∏£‡∏ß‡∏à‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á:")
    results["copied_example"], results["copied_example_keyword"] = check_example_copy(cleaned_answer, example_keywords)
    print(f" - ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏à‡∏≤‡∏Å‡∏ö‡∏ó‡∏Ñ‡∏ß‡∏≤‡∏°: {results['copied_example']}")
    if results["copied_example"]:
       print(f"   ‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á: {results['copied_example_keyword']}")


    print("\nüìå ‡∏ï‡∏£‡∏ß‡∏à‡∏Ñ‡∏≥‡∏ö‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô:")
    results["has_opinion"] = check_opinion(cleaned_answer)
    print(" - ‡∏°‡∏µ‡∏Ñ‡∏≥‡∏ß‡πà‡∏≤ '‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢' ‡∏´‡∏£‡∏∑‡∏≠ '‡πÑ‡∏°‡πà‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢':", results["has_opinion"])

    return results

# ------------------------- CALCULATE SCORE -------------------------
def calculate_score(results, copied_article_threshold=0.90):
    iappqa = results.get("iappqa", {})

    # ‡∏Ñ‡∏≥‡∏ö‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô
    has_opinion_flag = results.get("has_opinion") in ["‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢", "‡πÑ‡∏°‡πà‡πÄ‡∏´‡πá‡∏ô‡∏î‡πâ‡∏ß‡∏¢"]

    # ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô (‡∏ñ‡∏≤‡∏°‡∏ß‡πà‡∏≤ ‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ)
    reason_support = iappqa.get("‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô‡∏Ç‡∏≠‡∏á‡∏™‡∏∑‡πà‡∏≠‡∏™‡∏±‡∏á‡∏Ñ‡∏°‡∏≠‡∏≠‡∏ô‡πÑ‡∏•‡∏ô‡πå‡∏°‡∏µ‡∏Ñ‡∏ß‡∏≤‡∏°‡∏à‡∏≥‡πÄ‡∏õ‡πá‡∏ô‡πÉ‡∏ô‡∏ä‡∏µ‡∏ß‡∏¥‡∏ï‡πÑ‡∏´‡∏° ‡∏ï‡∏≠‡∏ö ‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ", "").strip()
    reason_support_flag = (reason_support == "‡∏°‡∏µ")

    # ‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö opinion (‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏ó‡∏µ‡πà‡∏î‡∏µ‡∏Ñ‡∏ß‡∏£‡πÄ‡∏õ‡πá‡∏ô "‡πÑ‡∏°‡πà‡∏°‡∏µ")
    opinion_text = results.get("has_opinion") if has_opinion_flag else ""
    reason_inconsistent_raw = iappqa.get(f"‡∏°‡∏µ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡∏Ñ‡∏≥‡∏ß‡πà‡∏≤ {opinion_text} ‡∏ï‡∏≠‡∏ö ‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ", "").strip()
    # True ‡πÅ‡∏õ‡∏•‡∏ß‡πà‡∏≤ "‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á"
    reason_inconsistent_flag = (reason_inconsistent_raw == "‡πÑ‡∏°‡πà‡∏°‡∏µ")

    # ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ó‡∏µ‡πà‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á (‡∏Ñ‡∏≥‡∏ï‡∏≠‡∏ö‡∏ó‡∏µ‡πà‡∏î‡∏µ‡∏Ñ‡∏ß‡∏£‡πÄ‡∏õ‡πá‡∏ô "‡πÑ‡∏°‡πà‡∏°‡∏µ")
    example_inconsistent_raw = iappqa.get("‡∏°‡∏µ‡∏ö‡∏≤‡∏á‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô  ‡∏ï‡∏≠‡∏ö ‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ", "").strip()
    example_all_consistent_flag = (example_inconsistent_raw == "‡πÑ‡∏°‡πà‡∏°‡∏µ")

    # ‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á ‡πÅ‡∏•‡∏∞‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á
    example_given_text = iappqa.get("‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á", "").strip()
    example_given_flag = bool(example_given_text)
    example_consistent_flag = iappqa.get(
        "‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô ‡∏ï‡∏≠‡∏ö ‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á", ""
    ).strip().startswith("‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á")

    # ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô
    reason_vs_opinion_consistent = iappqa.get(
        "‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô ‡∏ï‡∏≠‡∏ö ‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á", ""
    ).strip().startswith("‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á")

    # ‡∏ï‡∏£‡∏ß‡∏à‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å
    copied_example_flag = results.get("copied_example", False)
    copied_article_flag = results.get("copied_article", 0.0) >= copied_article_threshold

    # ‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç
    has_main_idea_flag = results.get("has_main_idea", False)

    # --------------------- ‡∏Å‡∏é‡πÉ‡∏´‡πâ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô ---------------------
    # 0 ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ï‡∏≠‡∏ö "‡πÑ‡∏°‡πà‡∏°‡∏µ" ‡∏´‡∏£‡∏∑‡∏≠ ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ö‡∏ó‡∏Ñ‡∏ß‡∏≤‡∏°‡∏´‡∏ô‡∏±‡∏Å ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç
    if  copied_article_flag or (not has_main_idea_flag): #(not reason_support_flag)
        return {"score": 0, "details": "‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏ô‡∏±‡∏ö‡∏™‡∏ô‡∏∏‡∏ô = ‡πÑ‡∏°‡πà‡∏°‡∏µ ‡∏´‡∏£‡∏∑‡∏≠ ‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏ö‡∏ó‡∏Ñ‡∏ß‡∏≤‡∏° ‡∏´‡∏£‡∏∑‡∏≠ ‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç"}

    # 8 ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: ‡∏™‡∏°‡∏ö‡∏π‡∏£‡∏ì‡πå‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î
    if (has_opinion_flag and reason_support_flag and reason_inconsistent_flag
        and example_all_consistent_flag and example_given_flag and example_consistent_flag
        and reason_vs_opinion_consistent and (not copied_example_flag) and (not copied_article_flag)
        and has_main_idea_flag):
        return {"score": 8, "details": "‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô: ‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô ‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á ‡πÑ‡∏°‡πà‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å ‡πÅ‡∏•‡∏∞‡∏°‡∏µ‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç"}

    # 6 ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: ‡∏î‡∏µ‡∏°‡∏≤‡∏Å ‡πÅ‡∏ï‡πà‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏ö‡∏ó‡∏Ñ‡∏ß‡∏≤‡∏°
    if (has_opinion_flag and reason_support_flag and reason_inconsistent_flag
        and example_all_consistent_flag and example_given_flag and example_consistent_flag
        and reason_vs_opinion_consistent and copied_example_flag and (not copied_article_flag)
        and has_main_idea_flag):
        return {"score": 6, "details": "‡∏î‡∏µ‡∏°‡∏≤‡∏Å: ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á ‡πÅ‡∏ï‡πà‡∏Ñ‡∏±‡∏î‡∏•‡∏≠‡∏Å‡∏à‡∏≤‡∏Å‡∏ö‡∏ó‡∏Ñ‡∏ß‡∏≤‡∏°"}

    # 4 ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: ‡∏°‡∏µ‡∏ö‡∏≤‡∏á‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô
    # ‡∏Å‡∏£‡∏ì‡∏µ 1: ‡∏°‡∏µ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÅ‡∏ï‡πà‡∏ö‡∏≤‡∏á‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á
    if (has_opinion_flag and reason_support_flag and reason_inconsistent_flag
        and (not example_all_consistent_flag) and example_given_flag
        and (not copied_article_flag) and has_main_idea_flag):
        return {"score": 4, "details": "‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ú‡πà‡∏≤‡∏ô ‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô ‡πÅ‡∏ï‡πà‡∏°‡∏µ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ö‡∏≤‡∏á‡∏™‡πà‡∏ß‡∏ô‡πÑ‡∏°‡πà‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á"}

    # ‡∏Å‡∏£‡∏ì‡∏µ 2: ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á ‡πÅ‡∏ï‡πà‡∏™‡πà‡∏ß‡∏ô‡∏´‡∏•‡∏±‡∏Å‡∏ú‡πà‡∏≤‡∏ô
    if (has_opinion_flag and reason_support_flag #and reason_inconsistent_flag
        and (not example_given_flag) and (not copied_article_flag) and has_main_idea_flag):
        return {"score": 4, "details": "‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ú‡πà‡∏≤‡∏ô ‡∏°‡∏µ‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô ‡πÅ‡∏ï‡πà‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Å‡∏≤‡∏£‡∏¢‡∏Å‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á"}

    # 2 ‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: ‡∏ú‡πà‡∏≤‡∏ô‡∏ö‡∏≤‡∏á‡∏™‡πà‡∏ß‡∏ô (‡πÄ‡∏ä‡πà‡∏ô ‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≥‡∏ö‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô ‡πÅ‡∏ï‡πà‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ú‡πà‡∏≤‡∏ô)
    if ((not reason_inconsistent_flag) and (not has_opinion_flag) and reason_support_flag and has_main_idea_flag and (not copied_article_flag)):
        return {"score": 2, "details": "‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•‡∏ú‡πà‡∏≤‡∏ô‡πÅ‡∏•‡∏∞‡∏°‡∏µ‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≥‡∏Ñ‡∏±‡∏ç ‡πÅ‡∏ï‡πà‡πÑ‡∏°‡πà‡∏°‡∏µ‡∏Ñ‡∏≥‡∏ö‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏Ñ‡∏¥‡∏î‡πÄ‡∏´‡πá‡∏ô"}

    # ‡∏Å‡∏£‡∏ì‡∏µ‡∏ó‡∏±‡πà‡∏ß‡πÑ‡∏õ‡∏ó‡∏µ‡πà‡∏ú‡πà‡∏≤‡∏ô‡πÄ‡∏Å‡∏ì‡∏ë‡πå‡∏´‡∏•‡∏±‡∏Å‡πÅ‡∏ï‡πà‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡πÄ‡∏Ç‡πâ‡∏≤‡∏Å‡∏£‡∏ì‡∏µ‡∏î‡πâ‡∏≤‡∏ô‡∏ö‡∏ô (‡∏Å‡∏±‡∏ô‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡πÄ‡∏õ‡πá‡∏ô None)
    return {"score": 2, "details": "‡∏ú‡πà‡∏≤‡∏ô‡πÄ‡∏Å‡∏ì‡∏ë‡πå‡∏´‡∏•‡∏±‡∏Å‡∏ö‡∏≤‡∏á‡∏™‡πà‡∏ß‡∏ô (‡πÄ‡∏´‡∏ï‡∏∏‡∏ú‡∏•/‡πÉ‡∏à‡∏Ñ‡∏ß‡∏≤‡∏°/‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á) ‡πÅ‡∏ï‡πà‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô"}

# ------------------------- Run -------------------------
if __name__ == "__main__":
    results = evaluate_student_answer(student_answer, reference_article, main_idea_keywords, example_keywords)
    score = calculate_score(results)
    print(f"\n‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô‡∏ó‡∏µ‡πà‡πÑ‡∏î‡πâ: {score}")
